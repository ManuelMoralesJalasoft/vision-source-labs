@page
@model Web.App.Pages.IndexModel
@{
    ViewData["Title"] = "Todo App";

    <div class="container mt-4">
        <h1 class="display-4 mb-4">To Dos</h1>

        <div class="card mb-4">
            <div class="card-body">
                <form method="post">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="title" name="title">
                                <label for="title">Todo Title</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="isCompleted" name="isCompleted" value="true">
                                <label class="form-check-label" for="isCompleted">Completed</label>
                                <input name="isCompleted" type="hidden" value="false" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle"></i> Add Todo
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var todo in Model.ToDos)
                        {
                            <tr>
                                <td>@todo.Id</td>
                                <td>@todo.Title</td>
                                <td>
                                    @if(todo.IsCompleted) {
                                        <span class="badge bg-success">Completed</span>
                                    } else {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@todo.Id" />
                                        <button type="submit" asp-page-handler="ToggleStatus" class="btn btn-sm @(todo.IsCompleted ? "btn-warning" : "btn-success")" title="Toggle status">
                                            <i class="bi @(todo.IsCompleted ? "bi-x-circle" : "bi-check-circle")"></i>
                                        </button>
                                    </form>
                                    
                                    <form method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="id" value="@todo.Id" />
                                        <button type="submit" asp-page-handler="Delete" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
